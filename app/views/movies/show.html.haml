-# in app/views/movies/show.html.haml

%h3 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Director:
    = @movie.director
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h4 Description:

%p#description= @movie.description

= link_to simple_format('Edit'), edit_movie_path(@movie)
= link_to simple_format('Find Movies With Same Director'), same_director_path(@movie)
= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
= simple_format('')
= link_to 'Back to movie list', movies_path
